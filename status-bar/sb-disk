#!/bin/sh
#############################################################
# @author Luke Smith, Mia Hunt @github kaykay38
#############################################################

# Status bar module for disk space
# $1 should be drive mountpoint, otherwise assumed /.

location=${1:-/}

[ -d "$location" ] || exit

case $BLOCK_BUTTON in
	1) notify-send "ïŸ‰ Disk space" "$(df -h --output=target,used,size)" ;;
	3) notify-send "ïŸ‰ Disk module" "\- Shows used hard drive space.
- Click to show all disk info." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

case "$location" in
	"/home/mia/Files"* ) icon="ïŸ‰ Files" ;;
	"/Windows"* ) icon="ïŸ‰ Windows" ;;
	"/home"* ) icon="ğŸ " ;;
	"/mnt/Hynix128GB-SSD"* ) icon="ïŸ‰ Hynix SDD" ;;
	"/mnt/WD1TB-HDD"* ) icon="ïŸ‰ WD HDD" ;;
	"/mnt"* ) icon="ïŸ‰" ;;
	*) icon="/";;
esac

printf "%s: %s\n" "$icon" "$(df -h "$location" | awk ' /[0-9]/ {print $3 "/" $2}')"
