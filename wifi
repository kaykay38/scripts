#!/bin/sh
#############################################################
# @author Mia Hunt
# @github kaykay38
#############################################################

[[ "$(cat /sys/class/net/w*/operstate 2>/dev/null)" = 'up' ]] && wifiicon="$(awk '/^\s*w/ { print "яки "int($3 * 100 / 70)"%" }' /proc/net/wireless) "
wifiStatus="$wifiicon$(nmcli | grep 'wlp5s0: connected to ' | sed 's/wlp5s0: connected to //')"
[ ! -z "$wifiStatus" ] && echo "$wifiStatus" && exit 0
echo "якй Disconnected"
